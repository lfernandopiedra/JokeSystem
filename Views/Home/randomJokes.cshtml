
@{
    ViewBag.Title = "View Random Jokes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Random Jokes</h2>
<div class="row">
    <div class="col-md-12">
        <h4 id="joke"></h4>

    </div>
</div>
<script type="text/javascript">
        $(document).ready(function () {
            $.post("@Url.Action("getRandJokes", "Home")", {}, function (data) {
                $("#joke").html(data);
            });
        });

        setInterval(
        function ()
        {
            $.post("@Url.Action("getRandJokes", "Home")", {}, function (data) {
                $("#joke").html(data);
            });
        }, 10000)
</script>